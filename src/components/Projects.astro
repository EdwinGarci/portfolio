---
import { getLocale } from '../utils/i18nHelpers';

const { locale, translations } = await getLocale(Astro);
const tags = {
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-blue-500 text-white",
        icon: `<svg class="mr-1 w-3 h-3" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 2c-3.866 0-7 3.134-7 7 0 3.523 2.455 6.459 6.197 6.915.417.054.79-.225.9-.627.11-.402-.104-.827-.495-.928C9.15 14.117 8 12.29 8 10c0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.29-1.15 4.117-3.602 4.36-.39.1-.605.526-.495.928.11.402.483.681.9.627C16.545 15.459 19 12.523 19 9c0-3.866-3.134-7-7-7z"/>
              </svg>`,
    },
    VUE: {
        name: "Vue.js",
        class: "bg-green-500 text-white",
        icon: `<svg class="mr-1 w-3 h-3" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 2L1 22h6l5-9 5 9h6L12 2z"/>
              </svg>`,
    },
    NODEJS: {
        name: "Node.js",
        class: "bg-green-700 text-white",
        icon: `<svg class="mr-1 w-3 h-3" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 2l10 6v8l-10 6-10-6V8z"/>
              </svg>`,
    },
};
const projects = [
    {
        title: "SISCONIS",
        image: "https://flowbite.s3.amazonaws.com/blocks/marketing-ui/blog/office-laptops.png",
        description: "Proyecto que se realizo para la entrada y asistencia de una empresa en la que trabaje como desarrollador.",
        tags: [tags.NODEJS, tags.VUE, tags.TAILWIND],
        links: {
            github: "#",
            demo: "#",
        },
    },
    {
        title: "DEMO",
        image: "https://flowbite.s3.amazonaws.com/blocks/marketing-ui/blog/office-laptops.png",
        description: "A modern portfolio using Astro and TailwindCSS.",
        tags: ["Frontend", "TailwindCSS", "Astro"],
        links: {
            github: "#",
            demo: "#",
        },
    },
    {
        title: "DEMO",
        image: "https://flowbite.s3.amazonaws.com/blocks/marketing-ui/blog/office-laptops.png",
        description: "A modern portfolio using Astro and TailwindCSS.",
        tags: ["Frontend", "TailwindCSS", "Astro"],
        links: {
            github: "#",
            demo: "#",
        },
    },
];

---

<section id="projects">
    <div class="max-w-screen-xl px-4 py-8 mx-auto lg:px-6 lg:py-24 sm:py-16">
        <h2 class="text-4xl mb-8 font-extrabold leading-tight pb-3 tracking-tight text-white sm:text-4xl md:text-5xl xl:text-6xl dark:text-white">
            {translations.projects.title}
        </h2>
        <p class="mb-8 lg:mb-16 font-normal text-gray-500 dark:text-gray-400 sm:text-xl">
            {translations.projects.description} 
        </p>
        <div class="grid gap-8 lg:grid-cols-3">
            {projects.map((project) => (
                <article class="p-6 bg-gray-800 rounded-lg border border-gray-700 shadow-md">
                    <a href={project.links.demo}>
                        <img class="mb-5 rounded-lg" src={project.image} alt={project.title} />
                    </a>
                    <h2 class="mb-2 text-2xl font-bold tracking-tight text-white">
                        <a href={project.links.demo}>{project.title}</a>
                    </h2>
                    <div class="flex justify-start items-center mt-3 mb-3 space-x-2">
                        {project.tags.map((tag) => (
                            <span class={`${tag.class} text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded`}>
                                <span class="mr-1" set:html={tag.icon}></span>
                                {tag.name}
                            </span>
                        ))}
                    </div>
                    <p class="mb-5 font-light text-gray-500 dark:text-gray-400">{project.description}</p>
                    <div class="flex justify-between items-center">
                        <a href={project.links.github} class="inline-flex items-center font-medium text-gray-200 dark:text-primary-200 hover:underline">
                            Github
                            <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 .297C5.37.297 0 5.67 0 12.3c0 5.292 3.438 9.793 8.207 11.387.6.112.793-.26.793-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.607-4.042-1.607-.546-1.386-1.333-1.754-1.333-1.754-1.09-.745.083-.729.083-.729 1.204.084 1.837 1.235 1.837 1.235 1.07 1.834 2.807 1.304 3.492.997.108-.776.42-1.305.762-1.604-2.665-.305-5.466-1.333-5.466-5.93 0-1.31.468-2.38 1.235-3.22-.123-.304-.535-1.524.117-3.176 0 0 1.008-.324 3.3 1.23.96-.266 1.985-.399 3.005-.405 1.02.006 2.046.139 3.005.405 2.29-1.554 3.297-1.23 3.297-1.23.653 1.653.242 2.872.12 3.176.77.84 1.232 1.91 1.232 3.22 0 4.61-2.804 5.623-5.475 5.92.432.372.823 1.103.823 2.222 0 1.606-.014 2.898-.014 3.293 0 .32.19.694.8.576C20.565 22.092 24 17.592 24 12.3 24 5.67 18.627.297 12 .297z"></path>
                            </svg>
                        </a>
                        <a href={project.links.demo} class="inline-flex items-center font-medium text-gray-200 dark:text-primary-200 hover:underline">
                            Demo
                            <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    </div>
                </article>
            ))}
        </div>
    </div>
</section>