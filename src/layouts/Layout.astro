---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getLocale } from '../utils/i18nHelpers';

const { locale, translations } = await getLocale(Astro);
---
<!doctype html>
<html lang={locale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={translations.layout.description} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{translations.layout.title}</title>
		<style>
			@import url('https://fonts.googleapis.com/css2?family=Raleway:wght@600&family=Ubuntu:wght@300&display=swap');
		</style>
	</head>
	<body class="relative h-full w-full text-black dark:text-white">
		<div class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#33ee77_100%)]"></div>
		<div class="absolute z-[-2] inset-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:14px_24px]"></div>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	:root {
        color-scheme: light dark;
    }

	html {
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		width: 100%;
		height: 100%;
		overscroll-behavior: none; 
		color: rgba(17, 17, 17, 0.9);
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		font-family: 'Ubuntu', sans-serif;
	}

	h1, h2, h3, h4, h5, h6 {
        font-family: 'Raleway', sans-serif;
        font-weight: 600;
    }
</style>
