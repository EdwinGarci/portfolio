---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Contratame para crear tu aplicación web. Desarrollador Web e Ingeniero de Sistemas. Especializado en crear aplicaciones únicas." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portafolio de Fidel García - Desarrollador y Programador Web</title>
	</head>
	<body class="relative h-full w-full bg-black text-white">
		<div class="absolute z-[-2] inset-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:14px_24px]"></div>
		<div class="absolute z-[-2] left-0 right-0 top-[-10%] h-[1000px] w-[1000px] rounded-full bg-[radial-gradient(circle_400px_at_50%_300px,#fbfbfb36,#000)]"></div>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	:root {
        color-scheme: light dark;
    }

	html {
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		width: 100%;
		height: 100%;
		overscroll-behavior: none; 
		color: rgba(17, 17, 17, 0.9);
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
</style>
